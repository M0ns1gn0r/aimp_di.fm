<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Margin="3" Grid.Row="0" Grid.Column="0" Text="Login:" />
        <TextBox Margin="3" Grid.Column="1" Grid.Row="0" FontSize="16" Text="{Binding Login}"/>

        <TextBlock Margin="3" Grid.Row="1" Grid.Column="0" Text="Password:" />
        <TextBox Margin="3" Grid.Column="1" Grid.Row="1" FontSize="16" Text="{Binding Password}"/>
    </Grid>

</UserControl>